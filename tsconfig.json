{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "sourceMap": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "@config/*": [
        "./src/config/*"
      ],
      "@modules/*": [
        "./src/modules/*"
      ],
      "@shared/*": [
        "./src/shared/*"
      ],
      "@ProjectTypes/*": [
        "./src/ProjectTypes/*"
      ],
    }
  },
  "ts-node": {
    "transpileOnly": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "*.config.ts"
  ]
}